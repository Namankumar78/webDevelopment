extends base.pug

block scripts
    script(src = '/static/index.pug')

block style
    style
      include ../static/style.css
      include ../static/styleContact.css

block content
    h1 Contact Us
    form(action="/contact", method="post")
            input(type="text", class="myInput", name="name", Placeholder="Enter you name")
            input(type="number", class="myInput", name="phone", Placeholder="Enter you number")
            input(type="email", class="myInput", name="Email", Placeholder="Enter you email")
            input(type="text", class="myInput", name="address", Placeholder="Enter you Address")
            input(type="text", class="myInput", name="desc", Placeholder="Enter you Concern")
            button(class = "btn" ) Submit
    